{
    "name": "nodem-mongo-basic",
    "version": "1.0.0",
    "description": "Basic Node REST API with Express",
    "main": "app.js",
    "scripts": {
        "predev": "mongodb-dataset-generator ./dataset/user_schema.json -n 10 -o ./dataset/user_dataset.json &&  mongodb-dataset-generator ./dataset/car_schema.json -n 10 -o ./dataset/car_dataset.json && mongoimport --db node-mongo-basic-dev --collection user --drop --type json --file ./dataset/user_dataset.json --jsonArray && mongoimport --db node-mongo-basic-dev --collection car --drop --type json --file ./dataset/car_dataset.json --jsonArray",
        "dev": "cross-env NODE_ENV=dev DB_NAME=node-mongo-basic-dev nodemon ./app.js",
        "start": "cross-env NODE_ENV=prod DB_NAME=node-mongo-basic-prod pm2 start ./app.js",
        "stop": "pm2 stop ./app.js",
        "test": "cross-env NODE_ENV=test DB_NAME=test mocha --reporter list"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rcalcaraz/node-mongo-basic.git"
    },
    "keywords": [
        "mongo",
        "mongoose",
        "express",
        "node",
        "rest",
        "javascript"
    ],
    "author": "Rafael Castillo Alcaraz <rafaelcastilloalcaraz@gmail.com>",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/rcalcaraz/node-mongo-basic/issues"
    },
    "homepage": "https://github.com/rcalcaraz/node-mongo-basic#readme",
    "dependencies": {
        "bcrypt": "^1.0.2",
        "body-parser": "^1.16.1",
        "cross-env": "^3.1.4",
        "dotenv": "^4.0.0",
        "express": "^4.14.1",
        "jsonwebtoken": "^7.3.0",
        "method-override": "^2.3.7",
        "mongoose": "^4.8.4",
        "mongoose-unique-validator": "^1.0.3",
        "morgan": "^1.8.1",
        "path": "^0.12.7",
        "pm2": "^2.4.0",
        "rotating-file-stream": "^1.1.9"
    },
    "devDependencies": {
        "bluebird": "^3.4.7",
        "chai": "^3.5.0",
        "chai-http": "^3.0.0",
        "mocha": "^3.2.0",
        "mongodb-dataset-generator": "^1.0.0",
        "nodemon": "^1.11.0"
    }
}